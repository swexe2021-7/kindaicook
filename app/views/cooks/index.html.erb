<h3>レシピを検索</h3>

<%= form_tag({controller:"cooks",action:"index"}, method: :get) do %>

 <%= text_field_tag :search %>


<%= submit_tag "Search" ,:message => nil ,class: "button is-info"%> 

<% end %>

<% @cooks.each do |e| %>
  <p>
    <%= e.message %>
    <%= link_to '表示', cook_path(e) %>
    <% if current_user %>
      <%= link_to '削除', cook_path(e), method: :delete %>
      
      <% if e.likes.count > 0 %>
        <%= link_to 'いいね削除', like_path(e), method: :delete %>
      <% else %>
        <%= link_to 'いいね', likes_path(cook_id: e.id), method: :post %>
      <% end %>

    <% end %>
    </p>
<% end %>

<p> 
<% if current_user %>
  <%= link_to 'レシピを投稿する', new_cook_path %>
<% end %>
</p>

<p>
<% if current_user %>
  <%= link_to 'ログアウト', tops_logout_path %>
<% else %>
  <%= link_to 'ログイン', tops_main_path %>
<% end %>
</p>

<p>
  <%= link_to 'ユーザ一覧', users_path %>
</p>

